@model IEnumerable<WardrobeMVC.Models.Sho>

@{
    ViewBag.Title = "Index";
}

<h2>Shoes</h2>

<p>
    Add to the collection!-  @Html.ActionLink("Create New", "Create")
</p>

@foreach (var item in Model)
{
    <div class="container col-md-4 img-responsive" id="shoesImages">
        @Html.DisplayFor(modelItem => item.ShoesName)

        <h1>
            <img src=@Url.Content(item.ShoesPhoto)>
        </h1>

        @Html.ActionLink("Edit", "Edit", new { id = item.ShoesID }) |
        @Html.ActionLink("Details", "Details", new { id = item.ShoesID }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.ShoesID })
        </div>

        }


